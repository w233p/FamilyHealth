<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/loginYellow</item>
        <item name="colorPrimaryDark">@color/loginYellow</item>
        <item name="colorAccent">@color/loginYellow</item>
    </style>

    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/mainGray</item>
        <item name="colorPrimaryDark">@color/mainGray</item>
        <item name="colorAccent">@color/mainGray</item>
    </style>

    <style name="DataTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/dataBlue</item>
        <item name="colorPrimaryDark">@color/dataBlue</item>
        <item name="colorAccent">@color/dataBlue</item>
    </style>
</resources>
