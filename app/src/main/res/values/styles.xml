<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/loginYellow</item>
        <item name="colorPrimaryDark">@color/loginYellow</item>
        <item name="colorAccent">@color/loginYellow</item>
    </style>

    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/mainGray</item>
        <item name="colorPrimaryDark">@color/mainGray</item>
        <item name="colorAccent">@color/mainGray</item>
    </style>

    <style name="DataTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/dataBlue</item>
        <item name="colorPrimaryDark">@color/dataBlue</item>
        <item name="colorAccent">@color/dataBlue</item>
        <item name="android:textSize">20dp</item>
        <item name="android:windowEnterAnimation">@anim/pop_show</item>
        <item name="android:windowHideAnimation">@anim/pop_hidden</item>
    </style>

    <style name="HealthTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/healthBule</item>
        <item name="colorPrimaryDark">@color/healthBule</item>
        <item name="colorAccent">@color/healthBule</item>
    </style>

    <style name="PositionTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/loginGreen</item>
        <item name="colorPrimaryDark">@color/loginGreen</item>
        <item name="colorAccent">@color/loginGreen</item>
    </style>

    <style name="SetTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/setGreen</item>
        <item name="colorPrimaryDark">@color/setGreen</item>
        <item name="colorAccent">@color/setGreen</item>
    </style>

    <style name="CheckDataTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/dataBlue</item>
        <item name="colorPrimaryDark">@color/dataBlue</item>
        <item name="colorAccent">@color/dataBlue</item>
        <item name="android:textSize">28dp</item>
        <item name="android:windowEnterAnimation">@anim/pop_show</item>
        <item name="android:windowHideAnimation">@anim/pop_hidden</item>
    </style>
</resources>
