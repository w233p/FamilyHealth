<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/c1</item>
        <item name="colorPrimaryDark">@color/c1</item>
        <item name="colorAccent">@color/c1</item>
    </style>

    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/c2</item>
        <item name="colorPrimaryDark">@color/c2</item>
        <item name="colorAccent">@color/c2</item>
    </style>

    <style name="DataTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/c1</item>
        <item name="colorPrimaryDark">@color/c1</item>
        <item name="colorAccent">@color/c1</item>
        <item name="android:textSize">20dp</item>
        <item name="android:windowEnterAnimation">@anim/pop_show</item>
        <item name="android:windowHideAnimation">@anim/pop_hidden</item>
    </style>

    <style name="ClockTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/c2</item>
        <item name="colorPrimaryDark">@color/c1</item>
        <item name="colorAccent">@color/c1</item>
        <item name="android:textSize">20dp</item>
        <item name="android:windowEnterAnimation">@anim/pop_show</item>
        <item name="android:windowHideAnimation">@anim/pop_hidden</item>
    </style>

    <style name="HealthTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/c3</item>
        <item name="colorPrimaryDark">@color/c3</item>
        <item name="colorAccent">@color/c3</item>
    </style>

    <style name="PositionTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/c4</item>
        <item name="colorPrimaryDark">@color/c4</item>
        <item name="colorAccent">@color/c4</item>
    </style>

    <style name="SetTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/c6</item>
        <item name="colorPrimaryDark">@color/c6</item>
        <item name="colorAccent">@color/c6</item>
    </style>

    <style name="CheckDataTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/c2</item>
        <item name="colorPrimaryDark">@color/c2</item>
        <item name="colorAccent">@color/c2</item>
        <item name="android:textSize">28dp</item>
        <item name="android:windowEnterAnimation">@anim/pop_show</item>
        <item name="android:windowHideAnimation">@anim/pop_hidden</item>
    </style>

    <style name="FullScreenDialog" parent="android:Theme.Dialog">

        <!-- 窗口设为无标题 -->
        <item name="android:windowNoTitle">true</item>

        <!-- 窗口浮现在activity之上 -->
        <item name="android:windowIsFloating">false</item>

        <!-- 背景透明 -->
        <item name="android:windowBackground">@color/mainGray</item>

        <!-- 背景模糊 -->
        <item name="android:backgroundDimEnabled">true</item>

        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>

        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>

        <!-- 全屏 -->
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="Theme_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/mainGray</item>
        <item name="android:windowNoTitle">true</item>
    </style>


</resources>
